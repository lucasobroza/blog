<% @posts.each do |post| %>
  <div id = "cont" >
    <div style="display:block; font-size:30px">
      <%= post.title %> 
    </div>
    <div style="display:block; ">
      <%= post.text %>
    </div>  
    <div style="padding-bottom:20px">
      <%= link_to t('list.action.show'), post %>
      <%= link_to t('list.action.edit'), edit_post_path(post) %>
      <%= link_to t('list.action.destroy'), post_path(post), method: :delete, data: { confirm: 'Tem Certeza?' } %>
    </div>  
  </div>

<% end %>
